@page "/"
@using System.Drawing
@using BlazorApp30.Components.Spinner
@using BlazorApp30.Components.BackgroundContent
@inherits IndexBase

<h1>Hello, world!</h1>

<p>Welcome to your new app.</p>

<div class="accordeon-container">
    <Accordeon Title="Loaders" CenterTitle="true" bind-Expanded="@ViewModel.ExpandLoaderAccordeon">

        <div class="spinner-row">
            <h4>Indeterminate progress bar</h4>
            <div class="spinner-row" style="width: 90%; margin:0 auto;">
                <ProgressBar></ProgressBar>
            </div>
        </div>
        <div class="spinner-row">
            <h4>Spinner - small</h4>
            <Spinner Active="@ViewModel.ExpandLoaderAccordeon"></Spinner>
        </div>
        <div class="spinner-row">
            <h4>Spinner - small centered</h4>
            <Spinner Active="@ViewModel.ExpandLoaderAccordeon" Centered="true"></Spinner>
        </div>
        <div class="spinner-row">
            <h4>Spinner - medium</h4>
            <Spinner Active="@ViewModel.ExpandLoaderAccordeon" Size="@SpinnerSize.MEDIUM"></Spinner>
        </div>
        <div class="spinner-row">
            <h4>Spinner - medium centered</h4>
            <Spinner Active="@ViewModel.ExpandLoaderAccordeon" Size="@SpinnerSize.MEDIUM" Centered="true"></Spinner>
        </div>
        <div class="spinner-row">
            <h4>Spinner - large</h4>
            <Spinner Active="@ViewModel.ExpandLoaderAccordeon" Size="@SpinnerSize.LARGE"></Spinner>
        </div>
        <div class="spinner-row">
            <h4>Spinner - large centered</h4>
            <Spinner Active="@ViewModel.ExpandLoaderAccordeon" Size="@SpinnerSize.LARGE" Centered="true"></Spinner>
        </div>
    </Accordeon>
</div>

<SurveyPrompt Title="Is Blazor ok?" />