@inherits PagedGridBase
@using BlazorApp30.Components.Spinner

@if (HasContent)
{
    <Pager MaxIndicators="@MaxIndicators"
           OnRequestPage="@OnRequestPage"
           CurrentPage="@CurrentPage"
           PageCount="@PageCount"
           Small="@SmallPager"></Pager>
}
@if (HasContent && !Loading)
{
    <div class="child-content">
        @ChildContent
    </div>
}
else if (Loading)
{
    <Spinner Active="true" Centered="true" Size="SpinnerSize.LARGE"></Spinner>
}
else if (!HasContent)
{
    <p>@NoContentMessage</p>
}