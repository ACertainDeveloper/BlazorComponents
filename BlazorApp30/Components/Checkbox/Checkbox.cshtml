@inherits CheckboxBase

<div class="@($"checkbox size-{(int)Size}{(Inline ? " -inline" : null)}")">
    <label class="checkbox-input">
        <input 
            type="checkbox"
            checked="@Checked"
            onchange="@HandleChanged" />
        <span
            tabindex="0"
            role="checkbox"
            aria-label="@Label"
            aria-checked="@(Checked.ToString().ToLower())"
            onkeypress="@HandleKeyPress"
            class="checkbox-label" for="@($"checkbox-{CheckboxId}")">
                <i class="@($"checkbox-label far fa-{(Checked ? "check-": null)}square")"></i>
        </span>
    </label>
    <label class="checkbox-label">@Label</label>
</div>